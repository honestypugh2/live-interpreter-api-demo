# Azure Speech Service Configuration
# Get your keys from: https://portal.azure.com

# Speech Service Key (required)
SPEECH_KEY=your_speech_service_key_here

# Speech Service Region (required)
# For Live Interpreter, use: eastus, westus2, westeurope, japaneast, or southeastasia
SPEECH_REGION=eastus

# Speech Service Endpoint (optional, for Live Interpreter)
SPEECH_ENDPOINT=https://eastus.api.cognitive.microsoft.com

# Translation Settings
# Source language for speech recognition (can be auto-detected with Live Interpreter)
SOURCE_LANGUAGE=en-US

# Target language(s) for translation (comma-separated for multiple)
TARGET_LANGUAGE=es-ES

# Additional target languages (optional)
# TARGET_LANGUAGE_2=fr-FR
# TARGET_LANGUAGE_3=de-DE

# Voice Settings
# Choose between two modes:

# Option A (Recommended): Prebuilt Neural Voice - High quality, no approval needed
# Use any supported neural voice for your target language
# Examples: en-US-JennyNeural, es-ES-ElviraNeural, fr-FR-DeniseNeural, de-DE-KatjaNeural
VOICE_NAME=en-US-JennyNeural

# Option B (Advanced): Personal Voice - Preserves speaker's voice characteristics
# Requires approval from Azure: https://aka.ms/customneural
# VOICE_NAME=personal-voice

# Application Settings
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Audio buffer size in milliseconds
AUDIO_BUFFER_MS=100

# Enable/disable audio file saving for debugging
SAVE_AUDIO_FILES=false

# FastAPI Backend Settings (for React app)
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Streamlit Settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Feature Flags
# Enable Live Interpreter mode (requires approval from Azure)
ENABLE_LIVE_INTERPRETER=true

# Enable automatic language detection
ENABLE_AUTO_DETECT=true

# Enable real-time captions
ENABLE_CAPTIONS=true

# Enable audio playback
ENABLE_AUDIO_PLAYBACK=true
